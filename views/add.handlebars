{{>background/background-block }}



<div class="jumbtron jumbotron-fluid">
    <h1 class="display-4 text-center mb-4">Create An Event</h1>
</div>


<div class="add container" id="headers">
<form class="addEvent">
  <div class="form-row">
    <div class="form-group col-md-6 offset-md-3">
      <label>Title</label>
      <input type="text" class="title form-control" placeholder="Event Title">
    </div>
  </div>
  <div class="form-group col-md-8 offset-md-2">
    <label for="inputAddress">Address</label>
    <input type="text" class="address form-control" id="inputAddress" placeholder="1234 Main St">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="city form-control" id="inputCity">
    </div>
    <div class="form-group col-md-4 offset-1">
      <label for="inputState">State</label>
     <input type="text" class="state form-control" >
    </div>
  </div>
  <div class="form-row">
     <div class="form-group col-md-6">
      <label for="inputTime">Work Hours</label>
      <input type="text" class="hours form-control">
    </div>
     <div class="form-group col-md-4 offset-1">
      <label for="inputZip">Zip</label>
      <input type="text" class="zip form-control">
    </div>
    </div>
    <div class="form-row">
     <div class="form-group col-md-10">
      <label for="inputDetails">Event Description</label>
      <textarea type="text" class="details form-control"></textarea>
    </div>
    </div>
  

  <button type="submit" class="create btn btn-primary btn-lg mb-2">Create</button>
</form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/add.js"></script>
 